<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
    xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.workbench.view"
    xmlns:pretty="urn:import:org.obiba.opal.web.gwt.prettify.client"
    ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
    ui:generateLocales="default">

  <ui:style>
    .title {
      font-size: small;
    }

    .title-light {
      color: gray;
      font-size: small;
    }

    .left-aligned {
      float: left;
      margin-right: 0.5em
    }
  </ui:style>

  <g:FlowPanel width="100%" addStyleNames="navigator">

    <g:FlowPanel ui:field="toolbarPanel" addStyleNames="toolbar toolbar-left"/>

    <o:PropertiesTable condensed="true" borderedCell="false" zebra="true" addStyleNames="small-dual-indent top-margin"
        keyStyleNames="span2 small-indent" valueStyleNames="span8">
      <o:PropertyPanel>
        <g:Label>
          <ui:msg description="Entity type label">Entity Type</ui:msg>
        </g:Label>
        <g:Label ui:field="entityType"/>
      </o:PropertyPanel>

      <o:PropertyPanel column="1">
        <g:Label>
          <ui:msg description="Referenced Entity Type label">Referenced Entity Type</ui:msg>
        </g:Label>
        <g:Label ui:field="refEntityType"/>
      </o:PropertyPanel>

      <o:PropertyPanel>
        <g:Label>
          <ui:msg description="Value Type label">Value Type</ui:msg>
        </g:Label>
        <g:Label ui:field="valueType"/>
      </o:PropertyPanel>

      <o:PropertyPanel column="1">
        <g:Label>
          <ui:msg description="Mime Type label">Mime Type</ui:msg>
        </g:Label>
        <g:Label ui:field="mimeType"/>
      </o:PropertyPanel>

      <o:PropertyPanel>
        <g:Label>
          <ui:msg description="Repeatable label">Repeatable</ui:msg>
        </g:Label>
        <g:Label ui:field="repeatable"/>
      </o:PropertyPanel>

      <o:PropertyPanel column="1">
        <g:Label>
          <ui:msg description="Occurrence Group label">Occurrence Group</ui:msg>
        </g:Label>
        <g:Label ui:field="occurrenceGroup"/>
      </o:PropertyPanel>

      <o:PropertyPanel span="2">
        <g:Label>
          <ui:msg description="Unit label">Unit</ui:msg>
        </g:Label>
        <g:Label ui:field="unit"/>
      </o:PropertyPanel>

      <o:PropertyPanel span="2">
        <g:Label>
          <ui:msg description="Label label">Label</ui:msg>
        </g:Label>
        <g:FlowPanel ui:field="label"/>
      </o:PropertyPanel>
    </o:PropertiesTable>


    <o:HorizontalTabLayout ui:field="tabs" addStyleNames="small-dual-indent top-margin">
      <g:Anchor ui:field="categoryTableTitle"/>
      <g:FlowPanel>
        <b:SimplePager ui:field="categoryTablePager" location="CENTER" addStyleNames="right-aligned"/>
        <o:Table width="100%" ui:field="categoryTable" addStyleNames="left-aligned"/>
      </g:FlowPanel>

      <g:Anchor ui:field="attributeTableTitle"/>
      <g:FlowPanel>
        <b:SimplePager ui:field="attributeTablePager" location="CENTER" addStyleNames="right-aligned"/>
        <o:Table width="100%" ui:field="attributeTable" addStyleNames="left-aligned"/>
      </g:FlowPanel>

      <g:Anchor>
        <ui:msg description="Script label">Script</ui:msg>
      </g:Anchor>
      <g:FlowPanel>
        <g:InlineLabel ui:field="notDerived">
          <ui:msg description="Not Derived Variable label">Not a Derived Variable</ui:msg>
        </g:InlineLabel>
        <g:InlineLabel ui:field="noScript">
          <ui:msg description="No Script label">No Script</ui:msg>
        </g:InlineLabel>
        <pretty:PrettyPrintLabel ui:field="script"/>
      </g:FlowPanel>

      <g:Anchor>
        <ui:msg description="Summary tab title">Summary</ui:msg>
      </g:Anchor>
      <g:SimplePanel ui:field="summary" width="100%"/>

      <g:Anchor>
        <ui:msg description="Values label">Values</ui:msg>
      </g:Anchor>
      <g:SimplePanel ui:field="values"/>

      <g:Anchor>
        <ui:msg description="Permissions label">Permissions</ui:msg>
      </g:Anchor>
      <g:SimplePanel ui:field="permissions"/>

    </o:HorizontalTabLayout>

  </g:FlowPanel>

</ui:UiBinder>