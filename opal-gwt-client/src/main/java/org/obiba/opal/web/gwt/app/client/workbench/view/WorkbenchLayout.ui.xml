<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
    ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator" ui:generateLocales="default">

  <g:FlowPanel ui:field="workbench" addStyleNames="workbench">
    <b:Row ui:field="topHeader" addStyleNames="header"/>
    <b:Row ui:field="controlContent" addStyleNames="control"/>
    <b:Row ui:field="content">
      <g:ScrollPanel ui:field="mainContent" addStyleNames="main"/>
    </b:Row>
  </g:FlowPanel>

</ui:UiBinder>
